extends layout

block content
  include ./includes/header.jade
  .wrapper.zero-hack(ui-view)
  include ./includes/footer.jade
  script(type="text/ng-template" id="menu")
    .menu(ng-controller="translateCtrl")
      .container
        .row
          .col-xs-12
            .menu-link
              a(ui-sref="home" ui-sref-active="active" ng-click="closeThisDialog()") {{'header_0' | translate}}
            .menu-link
              a(ui-sref="processes" ui-sref-active="active" ng-click="closeThisDialog()") {{'header_1' | translate}}
            .menu-link
              a(ui-sref="processes" ui-sref-active="active" ng-click="closeThisDialog()") {{'header_2' | translate}}
            .menu-link
              a(ui-sref="online" ui-sref-active="active" ng-click="closeThisDialog()") {{'header_3' | translate}}
            .menu-link
              a(ui-sref="online" ui-sref-active="active" ng-click="closeThisDialog()") {{'header_4' | translate}}
            .menu-link
              a(ui-sref="online" ui-sref-active="active" ng-click="closeThisDialog()") {{'header_5' | translate}}
            .menu-link
              a(ui-sref="online" ui-sref-active="active" ng-click="closeThisDialog()") {{'header_6' | translate}}
            button.btn.btn-lang(ng-click="changeLanguage('en_US');closeThisDialog()") English
            button.btn.btn-lang(ng-click="changeLanguage('ru_RU');closeThisDialog()") Русский
  script(type="text/ng-template" id="event_form")
    form#formaddevent
      .container
        .row
          .col-lg-10.col-lg-offset-1
            .btn-close(ng-click="closeThisDialog()")
              span
            fugure.card
              .card-bg(back-grad="../images/competition.jpg")
                h4 {{'f_form' | translate}}
                input(type="text"
                      name="addevent_name"
                      placeholder="{{'f_form_name' | translate}}"
                      required="required")
                input(type="tel"
                      name="addevent_phone"
                      placeholder="{{'f_form_phone' | translate}}"
                      required="required")
                input(type="email"
                      name="addevent_email"
                      placeholder="{{'f_form_email' | translate}}"
                      required="required")
                textarea(rows="5"
                         name="addevent_message"
                         placeholder="{{'f_form_text' | translate}}"
                         required="required")
              figcaption.card-caption
                input(type="text"
                      name="addevent_date"
                      placeholder="{{'f_form_date' | translate}}"
                      required="required")
                input(type="tel"
                      name="addevent_title"
                      placeholder="{{'f_form_title' | translate}}"
                      required="required")
                textarea(rows="8"
                         name="addevent_content"
                         placeholder="{{'f_form_content' | translate}}"
                         required="required")
                button.btn.btn-default(type="submit") {{'f_form_btn' | translate}}
    script(type="text/javascript" src="addevent.js")